<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:wsd="clr-namespace:EleCho.WpfSuite.FluentDesign">

    <Color x:Key="{x:Static wsd:FluentDesignResourceKeys.TextColorKey}">Black</Color>

    <Color x:Key="{x:Static wsd:FluentDesignResourceKeys.ControlBackgroundColorKey}">#EEFFFFFF</Color>
    <Color x:Key="{x:Static wsd:FluentDesignResourceKeys.ControlHoverBackgroundColorKey}">#88FFFFFF</Color>
    <Color x:Key="{x:Static wsd:FluentDesignResourceKeys.ControlPressedBackgroundColorKey}">#44FFFFFF</Color>

    <Color x:Key="{x:Static wsd:FluentDesignResourceKeys.TextBoxBackgroundColorKey}">#AAFFFFFF</Color>
    <Color x:Key="{x:Static wsd:FluentDesignResourceKeys.TextBoxHoverBackgroundColorKey}">#66FFFFFF</Color>
    <Color x:Key="{x:Static wsd:FluentDesignResourceKeys.TextBoxFocusedBackgroundColorKey}">White</Color>

    <SolidColorBrush x:Key="{x:Static wsd:FluentDesignResourceKeys.TextBrushKey}"
                     Color="{DynamicResource {x:Static wsd:FluentDesignResourceKeys.TextColorKey}}"/>

    <SolidColorBrush x:Key="{x:Static wsd:FluentDesignResourceKeys.ControlBackgroundBrushKey}"
                     Color="{DynamicResource {x:Static wsd:FluentDesignResourceKeys.ControlBackgroundColorKey}}"/>
    <SolidColorBrush x:Key="{x:Static wsd:FluentDesignResourceKeys.ControlHoverBackgroundBrushKey}"
                     Color="{DynamicResource {x:Static wsd:FluentDesignResourceKeys.ControlHoverBackgroundColorKey}}"/>
    <SolidColorBrush x:Key="{x:Static wsd:FluentDesignResourceKeys.ControlPressedBackgroundBrushKey}"
                     Color="{DynamicResource {x:Static wsd:FluentDesignResourceKeys.ControlPressedBackgroundColorKey}}"/>

    <SolidColorBrush x:Key="{x:Static wsd:FluentDesignResourceKeys.TextBoxBackgroundBrushKey}"
                     Color="{DynamicResource {x:Static wsd:FluentDesignResourceKeys.TextBoxBackgroundColorKey}}"/>
    <SolidColorBrush x:Key="{x:Static wsd:FluentDesignResourceKeys.TextBoxHoverBackgroundBrushKey}"
                     Color="{DynamicResource {x:Static wsd:FluentDesignResourceKeys.TextBoxHoverBackgroundColorKey}}"/>
    <SolidColorBrush x:Key="{x:Static wsd:FluentDesignResourceKeys.TextBoxFocusedBackgroundBrushKey}"
                     Color="{DynamicResource {x:Static wsd:FluentDesignResourceKeys.TextBoxFocusedBackgroundColorKey}}"/>

    <LinearGradientBrush x:Key="{x:Static wsd:FluentDesignResourceKeys.ControlBorderBrushKey}"
                         StartPoint="0,0" EndPoint="0,3"
                         MappingMode="Absolute"
                         SpreadMethod="Pad">
        <LinearGradientBrush.RelativeTransform>
            <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1" ScaleY="-1"/>
        </LinearGradientBrush.RelativeTransform>
        <GradientStop Color="#29000000" Offset="0.3"/>
        <GradientStop Color="#0f000000" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="{x:Static wsd:FluentDesignResourceKeys.TextBoxBorderBrushKey}"
                         StartPoint="0,0" EndPoint="0,2"
                         MappingMode="Absolute"
                         SpreadMethod="Pad">
        <LinearGradientBrush.RelativeTransform>
            <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1" ScaleY="-1"/>
        </LinearGradientBrush.RelativeTransform>
        <GradientStop Color="#72000000" Offset="0.3"/>
        <GradientStop Color="#0f000000" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="TextFillColorPrimaryBrush">#1a1a1a</SolidColorBrush>
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush">#5c5c5c</SolidColorBrush>
    <SolidColorBrush x:Key="TextFillColorTertiaryBrush">#868686</SolidColorBrush>
    <SolidColorBrush x:Key="TextFillColorDisabledBrush">#9b9b9b</SolidColorBrush>

    <SolidColorBrush x:Key="AccentTextFillColorPrimaryBrush">#003e92</SolidColorBrush>
    <SolidColorBrush x:Key="AccentTextFillColorSecondaryBrush">#001a68</SolidColorBrush>
    <SolidColorBrush x:Key="AccentTextFillColorTertiaryBrush">#0067c0</SolidColorBrush>
    <SolidColorBrush x:Key="AccentTextFillColorDisabledBrush">#9b9b9b</SolidColorBrush>

    <SolidColorBrush x:Key="TextOnAccentFillColorPrimaryBrush">#ffffff</SolidColorBrush>
    <SolidColorBrush x:Key="TextOnAccentFillColorSecondaryBrush">#fbfbfb</SolidColorBrush>
    <SolidColorBrush x:Key="TextOnAccentFillColorDisabledBrush">#ffffff</SolidColorBrush>
    <SolidColorBrush x:Key="TextOnAccentFillColorSelectedTextBrush">#ffffff</SolidColorBrush>

    <SolidColorBrush x:Key="ControlFillColorDefaultBrush"></SolidColorBrush>



</ResourceDictionary>