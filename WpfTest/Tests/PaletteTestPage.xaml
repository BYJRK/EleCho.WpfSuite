                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush8}"/>
                    </Border>
                    <Border Background="{DynamicResource BackgroundBrush9}">
                        <TextBlock Text="Color9"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush9}"/>
                    </Border>
                </ws:FlexPanel>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Red:"/>
                <ws:FlexPanel UniformGrow="1"
                              Height="60">
                    <ws:FlexPanel.Resources>
                        <utils:ColorPalette PrimaryColor="#e4271e"/>
                    </ws:FlexPanel.Resources>

                    <Border Background="{DynamicResource BackgroundBrush1}">
                        <TextBlock Text="Color1"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush1}"/>
                    </Border>
                    <Border Background="{DynamicResource BackgroundBrush2}">
                        <TextBlock Text="Color2"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
