                        <TextBlock Text="Color4"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush4}"/>
                    </Border>
                    <Border Background="{DynamicResource BackgroundBrush5}">
                        <TextBlock Text="Color5"
                                   VerticalAlignment="Center"
