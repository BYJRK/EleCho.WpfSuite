                    </Border>
                    <Border Background="{DynamicResource BackgroundBrush6}">
                        <TextBlock Text="Color6"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush6}"/>
                    </Border>
                    <Border Background="{DynamicResource BackgroundBrush7}">
                        <TextBlock Text="Color7"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush7}"/>
                    </Border>
                    <Border Background="{DynamicResource BackgroundBrush8}">
                        <TextBlock Text="Color8"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush8}"/>
                    </Border>
                    <Border Background="{DynamicResource BackgroundBrush9}">
                        <TextBlock Text="Color9"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush9}"/>
                    </Border>
                </ws:FlexPanel>
            </StackPanel>
        </ws:StackPanel>
    </ws:ScrollViewer>
</Page>
