                    <ws:Button Content="Test" Click="Button_Click"/>
                    <ws:Button Content="Test" Click="Button_Click"/>
                    <ws:Button Content="Test" Click="Button_Click"/>
                </ws:StackPanel>
            </ws:ScrollViewer>
        </ws:Border>
    </Grid>
</Page>
